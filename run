#!/bin/sh

while getopts "ai" opt; do
  case $opt in
    a) OptA=true;;
    i) OptI=true;;
esac; done;

if [ $OptA ]; then
  poetry install --only main;
fi;

if [ $OptI ]; then
  if ! which poetry; then
    pip install poetry;
  fi;
  poetry install --sync;
  poetry update;
fi;

poetry run python src/run.py "$@";
