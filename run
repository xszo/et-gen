#!/bin/sh

while getopts "acghino" opt; do
  case $opt in
    a) OptA=true;;
    i) OptI=true;;
  esac; done;

if [ $OptA ] || [ $OptI ]; then
  if ! which pipenv; then
    pip install pipenv;
  fi;
  if [ $OptI ]; then
    pipenv install --dev;
  else
    pipenv install;
  fi;
fi;

pipenv run python src/run.py "$@";
